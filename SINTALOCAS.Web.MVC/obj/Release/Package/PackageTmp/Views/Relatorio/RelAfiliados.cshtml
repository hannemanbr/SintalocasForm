
@{
    ViewBag.Title = "RelAfiliados";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Afiliados Cadastrados</h2>

@if (ViewBag.Afiliados.Count > 0)
{
<table>
    <tr style="background-color: #000000; color:#ffffff">
        <td>Nome</td>
        <td>CPF</td>
        <td>RG</td>
        <td>Dt. Nasc.</td>
        <td>Empresa</td>
        <td>CNPJ</td>
        <td>Cargo</td>
        <td>Ação</td>
    </tr>
    @foreach (var item in ViewBag.Afiliados)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.CPF</td>
            <td>@item.RG</td>
            <td>@item.DataNascimento</td>
            <td>@item.Empresa</td>
            <td>@item.CNPJ</td>
            <td>@item.Cargo</td>
            <td>
                <a href="~/Relatorio/DetalheAfiliado/@item.CPF">Ver detalhes</a> | 
                <a href="~/Relatorio/DeleteAfiliado/@item.ID" onclick="return ConfirmaAcao('excluir este registro')" style="color:#ff0000">|X| Excluir</a>
            </td>
        </tr>
    }
</table>
}
else
{
    <br />
    <br />
    <div style="color:#ff0000; font-weight:bold">Nenhum registro encontrado</div>
}

