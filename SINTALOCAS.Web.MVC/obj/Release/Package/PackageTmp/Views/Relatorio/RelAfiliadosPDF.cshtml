
@{
    ViewBag.Title = ViewBag.TituloRelatorio;
    Layout = "~/Views/Shared/_LayoutRelatorio.cshtml";
}

<h2>Afiliados Cadastrados</h2>

@if (ViewBag.Lista.Count > 0)
{
    <table style="width:100%">
        <tr style="background-color: #000000; color:#ffffff">
            <td>Nome</td>
            <td>CPF</td>
            <td>RG</td>
            <td>Dt. Nasc.</td>
            <td>Empresa</td>
            <td>CNPJ</td>
            <td>Cargo</td>
        </tr>
        @foreach (var item in ViewBag.Lista)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.CPF</td>
                <td>@item.RG</td>
                <td>@item.DataNascimento</td>
                <td>@item.Empresa</td>
                <td>@item.CNPJ</td>
                <td>@item.Cargo</td>
            </tr>
        }
    </table>
}
else
{
    <br />
    <br />
    <div style="color:#ff0000; font-weight:bold">Nenhum registro encontrado</div>
}