
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>FICHA DE FILIAÇÃO</h2>
<body>
    <form action="" id="formAfilia">
        <div class="row">
            <label class="label">ASSOCIADO:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Nome" name="Nome" placeholder="nome completo" value="@ViewBag.Afiliado.Nome" />
        </div>
        <div class="row">
            <label class="label">E-MAIL:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Email" name="Email" onblur="validarEmail(this, '@ViewBag.RootView')" placeholder="e-mail" value="@ViewBag.Afiliado.Email" />
            <div style="color:#FF0000" id="rEmail"></div>
        </div>
        <div class="row"><label class="label">DATA DE NASCIMENTO:</label></div>
        <div class="row">
            <input type="text" data-mini="true" id="DtNasc" name="DtNasc" onblur="validarDtNasc(this, '@ViewBag.RootView')" class="simple-field-data-mask" data-mask="00/00/0000" />
            <div style="color:#FF0000" id="rDtNasc"></div>
        </div>
        <div class="row"><label class="label">RG:</label></div>
        <div class="row">
            <input type="text" data-mini="true" id="Rg" name="Rg" onblur="validarRG(this, '@ViewBag.RootView')" placeholder="Somente número" value="@ViewBag.Afiliado.RG" />
            <div style="color:#FF0000" id="rRg"></div>
        </div>
        <div class="row">
            <label class="label">CPF:</label>
        </div><div class="row">
            <input type="text" data-mini="true" id="Cpf" name="Cpf" onblur="validarCPF(this, '@ViewBag.RootView')" placeholder="Somente número" value="@ViewBag.Afiliado.CPF" />
            <div style="color:#FF0000" id="rCpf"></div>
        </div>
        <div class="row">
            <label class="label">PIS:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Pis" name="Pis" placeholder="" onblur="validarPIS(this, '@ViewBag.RootView')" value="@ViewBag.Afiliado.PIS" />
            <div style="color:#FF0000" id="rPis"></div>
        </div>
        <div class="row">
            <label class="label">CTPS:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="CtpsNum" name="CtpsNum" placeholder="" value="@ViewBag.Afiliado.CTPS_Numero" />
            <div style="color:#FF0000" id="rCtpsNum"></div>
        </div>
        <div class="row">
            <label class="label">Serie:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="CtpsSerie" name="CtpsSerie" placeholder="" value="@ViewBag.Afiliado.CTPS_Serie" />
        </div>
        <div class="row">
            <label class="label">Cargo:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Cargo" name="Cargo" placeholder="" value="@ViewBag.Afiliado.Nome" />
        </div>
        <div class="row">
            <label class="label">Empresa:</label>
        </div>
        <div class="row"><input type="text" data-mini="true" id="Empresa" name="Empresa" placeholder="" /></div>
        <div class="row">
            <label class="label">CNPJ:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Cnpj" name="Cnpj" placeholder="" onblur="validarCNPJ(this, '@ViewBag.RootView')" />
            <div style="color:#FF0000" id="rCnpj"></div>
        </div>
        <div class="row">
            <label class="label">CONSIR:</label>
        </div>
        <div class="row"><input type="text" data-mini="true" id="Consir" name="Consir" placeholder="" /></div>
        <div class="row">
            <label class="label">Celular:</label>
        </div>
        <div class="row">
            DDD <select id="TelCelDDD" name="TelCelDDD" style="width: 60px">
                @foreach (var item in ViewBag.DDDLista)
                {
                    <option value="@item">@item</option>
                }
            </select>
            No. <input type="text" data-mini="true" id="TelCelNum" name="TelCelNum" style="width:120px;" placeholder="99999-9999" />
        </div>
        <div class="row">
            <label class="label">Telefone Residencial:</label>
        </div>
        <div class="row">
            DDD <select id="TelResDDD" name="TelResDDD" style="width: 60px">
                @foreach (var item in ViewBag.DDDLista)
                {
                    <option value="@item">@item</option>
                }
            </select>
            <!-- DDD <input type="text" data-mini="true"  id="TelResDDD" name="TelResDDD" style="width:30px" placeholder="99" />-->
            No. <input type="text" data-mini="true" id="TelResNum" name="TelResNum" style="width:120px;" placeholder="opcional" />
        </div>
        <div class="row">
            <label class="label">CEP:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="CEP" name="CEP" onblur="validarCEP(this, '@ViewBag.RootView')" placeholder="Somente números" />
            <div style="color:#FF0000" id="rCEP">@ViewBag.MensagemCEPRetorno</div>
        </div>
        <div class="row">
            <label class="label">Rua:</label>
        </div>
        <div class="row"><input type="text" data-mini="true" id="Rua" name="Rua" placeholder="ex: Rua / Avenida / Estrada / Travessa, etc." /></div>
        <div class="row">
            <label class="label">Número:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Numero" name="Numero" placeholder="Somente números" />
        </div>
        <div class="row">
            <label class="label">Complemento:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Complemento" name="Complemento" />
        </div>
        <div class="row">
            <label class="label">Bairro:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Bairro" name="Bairro" />
        </div>
        <div class="row">
            <label class="label">Cidade:</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="Cidade" name="Cidade" />
        </div>
        <br />
        <div class="row">
            <label class="label">UF:</label>
            <input type="text" data-mini="true" id="UF" name="UF" maxlength="2" onblur="validarUF(this, '@ViewBag.RootView')" style="width: 50px" placeholder="XX" />
            <div style="color:#FF0000" id="rUF"></div>
        </div>
        <div class="row">
            <label class="label">Nome do Pai</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="NomePai" name="NomePai" placeholder="Opcional" />
        </div>
        <div class="row">
            <label class="label">Nome da Mãe</label>
        </div>
        <div class="row">
            <input type="text" data-mini="true" id="NomeMae" name="NomeMae" />
        </div>
        <div class="row">
            <label class="label">
                <a target="_blank" style="font-size:14px;" href="~/Download/docs/Ficha_Filiacao_AcordoJAN2018.pdf">Ler Termos e Condições</a>
            </label>
        </div>
        <div class="row">
            <input type="hidden" name="ID" id="ID" value="@ViewBag.Afiliado" />
            <div style="color:#FF0000" id="rForm"></div>
            <span id="rFormRetorno" style="color:#FF0000">@Html.Raw(ViewBag.MensagemRetorno)</span>
            <br />
            <input type="button" data-mini="true" id="btnGravar" value="Enviar" class="BotaoFinaliza" onclick="validarFormAfiliaEdita('@ViewBag.RootView')" />
        </div>
    </form>
</body>