
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> @ViewBag.Titulo</h1>
<br />
@Html.Raw(ViewBag.TextoPrincipal)
<span id="rFormRetorno" style="color:#FF0000">@Html.Raw(ViewBag.MensagemRetorno)</span>
<br />
<form action="Finalizar/Realizado" method="post">
    <div class="row">
        <label class="label">
            <a target="_blank" style="font-size:14px;" href="~/Download/docs/Ficha_Filiacao_AcordoJAN2018.pdf">Ler Termos e Condições</a>
        </label>
    </div>
    <div class="row">
        <input type="checkbox" id="concordo" name="concordo" value="1" />
        <span id="concordoTx" style="font-size:14px; font-weight: bold" name="concordoTx">@ViewBag.Aviso</span>
    </div>
    <br />
    <input type="submit" id="btnGravar" class="BotaoFinaliza" onclick="return ValidaConcordo('@ViewBag.Aviso');" value="Concordar e enviar pedido de afiliação" />
</form>
<br />