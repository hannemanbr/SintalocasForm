
@{
    ViewBag.Title = ViewBag.TituloSite;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Atualização de informações</h2>

<body>
    @ViewBag.MensagemRetorno
    <form action="@ViewBag.LinkSubmitAfilia" id="formAfilia">
        <div class="row">
            Tela finalizar (Termos e Condições):
            <textarea data-mini="true" id="Concordar" name="Concordar" placeholder="Digite seu texto" rows="10">@ViewBag.TxConcordar</textarea>
            <input type="hidden" id="ConcordarID" value="0" />
        </div>
        <div style="color:#FF0000" id="rForm"></div>
        <span id="rFormRetorno" style="color:#FF0000;">@Html.Raw(ViewBag.MensagemRetorno)</span>
        <br />
        <input type="button" data-mini="true" id="btnGravar" class="BotaoFinaliza" value="Atualizar" onclick="validarFormAfilia('@ViewBag.RootView')" />
    </form>
</body>

